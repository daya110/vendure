{
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleNameMapper": {
    "shared/(.*)": "<rootDir>/../../shared/$1.ts"
  },
  "rootDir": "../",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "skipBabel": true,
      "tsConfigFile": "<rootDir>/config/tsconfig.e2e.json",
      "enableTsDiagnostics": false
    }
  }
}
