{
  "name": "vendure",
  "version": "0.0.0",
  "description": "A modern, headless ecommerce framework",
  "private": true,
  "license": "MIT",
  "scripts": {
    "populate": "ts-node -r tsconfig-paths/register mock-data/populate.ts",
    "start:dev": "nodemon --config nodemon-debug.json",
    "lint": "tslint --project tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "build": "rimraf dist && tsc -p tsconfig.build.json && gulp"
  },
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/graphql": "^3.0.0",
    "@nestjs/microservices": "^5.0.0",
    "@nestjs/passport": "^1.0.10",
    "@nestjs/testing": "^5.0.0",
    "@nestjs/typeorm": "^5.0.0",
    "apollo-server-express": "^1.3.6",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "graphql": "^14.0.0-rc.2",
    "graphql-tools": "^3.0.2",
    "graphql-type-json": "^0.2.1",
    "i18next": "^11.3.3",
    "i18next-express-middleware": "^1.2.0",
    "i18next-icu": "^0.4.0",
    "i18next-node-fs-backend": "^1.0.0",
    "jsonwebtoken": "^8.2.2",
    "mysql": "^2.15.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.0",
    "typeorm": "^0.2.6",
    "typescript": "^2.9.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/express": "^4.0.39",
    "@types/faker": "^4.1.2",
    "@types/i18next": "^8.4.3",
    "@types/i18next-express-middleware": "^0.0.33",
    "@types/jest": "^21.1.8",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "faker": "^4.1.0",
    "graphql-request": "^1.6.0",
    "gulp": "^4.0.0",
    "jest": "^23.4.0",
    "nodemon": "^1.14.1",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-jest": "^23.0.0",
    "ts-node": "^6.0.0",
    "tsconfig-paths": "^3.3.1",
    "tslint": "^5.10.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src",
      "../shared"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
